{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "module": "ESNext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": ["DOM", "ES7", "ES6"],
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "test"]
}
